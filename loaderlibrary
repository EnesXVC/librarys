local Library = {}

function Library:CreateWindow(title)
    local window = {}
    window.Title = title
    window.Buttons = {}
    
    local loader = Instance.new("ScreenGui", game:GetService("CoreGui"))
    local mainFrame = Instance.new("Frame")
    mainFrame.BackgroundColor3 = Color3.fromRGB(12, 12, 12)
    mainFrame.Position = UDim2.new(0.427, 0, 0.393, 0)
    mainFrame.Size = UDim2.new(0.2, 0, 0.4, 0)
    mainFrame.Parent = loader
    
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Text = title
    titleLabel.Size = UDim2.new(1, 0, 0.1, 0)
    titleLabel.Parent = mainFrame
    
    local holderFrame = Instance.new("Frame")
    holderFrame.Size = UDim2.new(1, 0, 0.9, 0)
    holderFrame.Position = UDim2.new(0, 0, 0.1, 0)
    holderFrame.Parent = mainFrame
    
    local scrollingFrame = Instance.new("ScrollingFrame")
    scrollingFrame.Size = UDim2.new(1, 0, 1, 0)
    scrollingFrame.Parent = holderFrame
    
    local function CreateButton(name, description, script)
        local button = Instance.new("TextButton")
        button.Text = name .. " - " .. description
        button.Size = UDim2.new(1, 0, 0.1, 0)
        button.Parent = scrollingFrame
        button.MouseButton1Click:Connect(function()
            loadstring(game:HttpGet(script))()
        end)
    end
    
    function window:CreateButton(buttonData)
        table.insert(self.Buttons, buttonData)
        CreateButton(buttonData.name, buttonData.description, buttonData.script)
    end
    
    return window
end

return Library
